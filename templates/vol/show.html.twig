{% extends 'base.html.twig' %}

{% block title %}Détail du vol{% endblock %}

{% block body %}
    <h1>Détail du vol</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ vol.id }}</td>
        </tr>
        <tr>
            <th>Ville de départ</th>
            <td>{{ vol.villeDepart }}</td>
        </tr>
        <tr>
            <th>Ville d'arrivée</th>
            <td>{{ vol.villeArrive }}</td>
        </tr>
        <tr>
            <th>Date de départ</th>
            <td>{{ vol.dateDepart ? vol.dateDepart|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Heure de départ</th>
            <td>{{ vol.heureDepart ? vol.heureDepart|date('H:i') : '' }}</td>
        </tr>
        <tr>
            <th>Prix billet</th>
            <td>{{ vol.prixBillet }} €</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_vol_index') }}">Retour à la liste</a>
    <a class="btn btn-warning" href="{{ path('app_vol_edit', {'id': vol.id}) }}">Modifier</a>

    {{ include('vol/_delete_form.html.twig') }}
{% endblock %}
