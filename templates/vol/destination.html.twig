{# templates/vol/destination.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="destination-container">
        <h1 class="main-title">Nos Destinations de Rêve</h1>

        <div class="destination-grid">
            {% for vol in vols %}
                <div class="destination-card" data-aos="fade-up" data-aos-delay="{{ loop.index * 50 }}">
                    <div class="card-image-container">
                        <img src="{{ vol.cityImageUrl }}"
                             alt="{{ vol.villeArrive }}"
                             class="card-image"
                             loading="lazy"
                             onerror="this.src='https://images.unsplash.com/photo-1502602898657-3e91760cbb34?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80'">
                        <div class="price-tag">{{ vol.prixBillet|number_format(2, ',', ' ') }} €</div>
                        <div class="city-badge">{{ vol.villeArrive }}</div>
                    </div>

                    <div class="card-details">
                        <div class="detail-item">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                            </svg>
                            <span>{{ vol.villeDepart }}</span>
                        </div>

                        <div class="detail-item">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zM9 14H7v-2h2v2zm4 0h-2v-2h2v2zm4 0h-2v-2h2v2zm-8 4H7v-2h2v2zm4 0h-2v-2h2v2zm4 0h-2v-2h2v2z"/>
                            </svg>
                            <span>{{ vol.dateDepart|date('d/m/Y') }}</span>
                        </div>

                        <div class="detail-item">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                                <path d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                            </svg>
                            <span>{{ vol.heureDepart|date('H:i') }}</span>
                        </div>

                        <a href="{{ path('app_vol_show', {'id': vol.id}) }}" class="book-button">
                            Voir les détails
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="arrow-icon">
                                <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        /* Reset et base */
        .destination-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        .main-title {
            text-align: center;
            margin-bottom: 3rem;
            font-size: 2.5rem;
            background: linear-gradient(90deg, #2563eb, #7c3aed);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            position: relative;
        }

        .main-title::after {
            content: '';
            position: absolute;
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #2563eb, #7c3aed);
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 2px;
        }

        /* Grid layout */
        .destination-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
        }

        /* Card styling */
        .destination-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .destination-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        /* Image container */
        .card-image-container {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

        .card-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .destination-card:hover .card-image {
            transform: scale(1.05);
        }

        /* Price tag */
        .price-tag {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-weight: 600;
            backdrop-filter: blur(5px);
        }

        /* City badge */
        .city-badge {
            position: absolute;
            bottom: 1rem;
            left: 1rem;
            background: linear-gradient(90deg, #2563eb, #7c3aed);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 1.1rem;
        }

        /* Card details */
        .card-details {
            padding: 1.5rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.75rem;
            color: #4b5563;
        }

        .icon {
            width: 20px;
            height: 20px;
            margin-right: 0.75rem;
            fill: #6b7280;
        }

        /* Book button */
        .book-button {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            margin-top: 1rem;
            padding: 0.75rem;
            background: linear-gradient(90deg, #2563eb, #7c3aed);
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .book-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(39, 99, 235, 0.4);
        }

        .arrow-icon {
            width: 18px;
            height: 18px;
            margin-left: 0.5rem;
            transition: transform 0.3s ease;
        }

        .book-button:hover .arrow-icon {
            transform: translateX(3px);
        }

        /* Animations */
        [data-aos] {
            opacity: 0;
            transition: all 0.6s ease;
        }

        [data-aos].aos-animate {
            opacity: 1;
            transform: translateY(0);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .destination-grid {
                grid-template-columns: 1fr;
            }

            .main-title {
                font-size: 2rem;
            }
        }
    </style>

    <script>
        // Simple animation on scroll implementation
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('[data-aos]');

            const animateOnScroll = () => {
                cards.forEach(card => {
                    const cardTop = card.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (cardTop < windowHeight - 100) {
                        card.classList.add('aos-animate');
                    }
                });
            };

            // Initial check
            animateOnScroll();

            // Check on scroll
            window.addEventListener('scroll', animateOnScroll);

            // Smooth scroll to top when page loads
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    </script>
{% endblock %}