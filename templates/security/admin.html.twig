{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">Bienvenue sur le tableau de bord Admin</h1>

        <div class="row g-4">
            <div class="col-md-4">
                <a href="{{ path('app_utilisateur_index') }}" class="btn btn-primary w-100 py-3 shadow rounded-3">
                    🧑‍💼 Gérer les utilisateurs
                </a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('app_avion_index') }}" class="btn btn-success w-100 py-3 shadow rounded-3">
                    ✈️ Gérer les avions
                </a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('app_conges_index') }}" class="btn btn-warning w-100 py-3 shadow rounded-3">
                    📅 Gérer les congés
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('app_modele') }}" class="btn btn-info w-100 py-3 shadow rounded-3">
                    🛩️ Gérer les modèles (ajouter un modèle d'avion)
                </a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('app_reservation_index') }}" class="btn btn-dark w-100 py-3 shadow rounded-3">
                    📖 Gérer les réservations
                </a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('app_vol_index') }}" class="btn btn-outline-danger w-100 py-3 shadow rounded-3">
                    📍 Gérer les vols
                </a>
            </div>
        </div>
    </div>
{% endblock %}
