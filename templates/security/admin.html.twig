{# templates/admin/dashboard.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Tableau de Bord Administrateur</h1>

        <div class="row">
            <!-- Bouton pour gérer les congés -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Gestion des Congés</h5>
                        <p class="card-text">Voir et valider les demandes de congés des employés.</p>

                    </div>
                </div>
            </div>

            <!-- Bouton pour gérer les utilisateurs -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Gestion des Utilisateurs</h5>
                        <p class="card-text">Voir et gérer les utilisateurs de l'application.</p>

                    </div>
                </div>
            </div>

            <!-- Bouton pour les statistiques -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Statistiques</h5>
                        <p class="card-text">Voir les statistiques de l'application (congés, utilisateurs, etc.).</p>

                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <h3>Actions supplémentaires</h3>
            <div class="row">
                <div class="col-md-6">

                </div>
                <div class="col-md-6">

                </div>
            </div>
        </div>
    </div>
{% endblock %}
